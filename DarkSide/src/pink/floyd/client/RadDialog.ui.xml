<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.important {
			font-weight: bold;
		}

        .ticket {
           padding: 10px;
           width: 100%;
        }

        .buttons {
           float: right;
        }
	</ui:style>
 <g:FlowPanel>
 <g:DialogBox ui:field="rad" autoHide="true" modal="true">
   <g:caption><b>Scalpers R Us</b></g:caption>
   <g:HTMLPanel>
     <h3>Tickets for only $350 a piece!</h3>
     <p><em>And that's only for the moshpit</em>. For our premium seat prices,
         please contact us while sitting down</p>
         <g:FormPanel ui:field="form">
            <g:VerticalPanel styleName="{style.ticket}">
                <g:Label>Name</g:Label>
                <g:TextBox ui:field="name" />
                <g:HorizontalPanel styleName="{style.ticket}">
                  <g:Button ui:field='cancelButton' styleName="{style.buttons}">No Thanks</g:Button>
                  <g:Button ui:field='okButton' styleName="{style.buttons}">YeeHah!</g:Button>   
                </g:HorizontalPanel>
            </g:VerticalPanel> 
         </g:FormPanel>
     
   </g:HTMLPanel>
 </g:DialogBox>
 </g:FlowPanel>
</ui:UiBinder> 